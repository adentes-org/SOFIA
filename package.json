{
  "name": "sofia",
  "description": "Suivi Op√©rationnel des Fiches d'Intervention par Applicatif",
  "version": "0.1.0",
  "private": true,
  "authors": [
    {
      "name": "Antoine GIRARD",
      "email": "antoine.girard@sapk.fr",
      "homepage": "https://sapk.fr"
    }
  ],
  "scripts": {
    "clean": "cordova clean android",
    "build": "cordova build",
    "get-bower": "bower-installer",
    "compile-less": "npm run compile-app-less && npm run compile-platform-browser-less && npm run compile-platform-android-less",
    "compile-app-less": "lessc --source-map --source-map-rootpath=../less --source-map-url=style.css.map --clean-css=advanced www/assets/less/style.less www/assets/css/style.css",
    "compile-platform-android-less": "lessc --source-map --source-map-url=style.css.map --clean-css=advanced www/assets/platform/android/style.less www/assets/platform/android/style.css",
    "compile-platform-browser-less": "lessc --source-map --source-map-url=style.css.map --clean-css=advanced www/assets/platform/browser/style.less www/assets/platform/browser/style.css",
    "compile-platform-ios-less": "lessc --source-map --source-map-url=style.css.map --clean-css=advanced www/assets/platform/ios/style.less www/assets/platform/ios/style.css",
    "start-browser": "cordova run browser",
    "start-android": "cordova start android",
    "postinstall": "npm run get-bower && gulp cordova:init clean less",
    "preversion": "npm run get-bower && npm run compile-less",
    "prestart": "npm run compile-less",
    "start": "npm run start-browser",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adentes-org/SOFIA.git"
  },
  "devDependencies": {
    "bower-installer": "^1.2.0",
    "cordova": "^5.4.1",
    "del": "^2.1.0",
    "gulp": "^3.9.0",
    "gulp-cordova": "^1.1.0",
    "gulp-less-sourcemap": "^1.4.2",
    "gulp-minify-css": "^1.2.1",
    "less": "^2.5.3",
    "less-plugin-autoprefix": "~1.5.1",
    "less-plugin-clean-css": "~1.5.1",
    "gulp-autoprefixer": "~3.1.0",
    "gulp-sourcemaps": "~1.6.0",
    "gulp-less": "~3.0.5"
  },
  "cordova": [
    [
      "platform",
      "add",
      "ios",
      "android",
      "browser"
    ],
    [
      "plugin",
      "add",
      "cordova-plugin-whitelist",
      "cordova-plugin-dialogs"
    ]
  ],
  "license": "MIT"
}
